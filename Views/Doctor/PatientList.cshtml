@model List<OncoTrack.Models.Patient>
@{
    ViewData["Title"] = "Patient List";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>My Patients</h2>
                <div>
                    <a href="@Url.Action("AssignPatient", "Doctor")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Assign New Patient
                    </a>
                    <a href="@Url.Action("Index", "Doctor")" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var patient in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="mb-0">@patient.User.FirstName @patient.User.LastName</h5>
                                    <small class="text-muted">Patient ID: @patient.PatientId.Substring(0, 8)...</small>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>Cancer Type:</strong> @patient.CancerType
                                    </div>
                                    <div class="mb-2">
                                        <strong>Stage:</strong> @patient.Stage
                                    </div>
                                    <div class="mb-2">
                                        <strong>Diagnosis Date:</strong> @patient.DiagnosisDate.ToString("MMM dd, yyyy")
                                    </div>
                                    <div class="mb-3">
                                        <strong>Email:</strong> @patient.User.Email
                                    </div>
                                    
                                    @{
                                        var activeMedications = patient.Medications?.Where(m => m.IsActive).Count() ?? 0;
                                        var upcomingAppointments = patient.Appointments?.Where(a => a.AppointmentDate >= DateTime.Now && a.Status == "Scheduled").Count() ?? 0;
                                    }
                                    
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <div class="border rounded p-2">
                                                <strong>@activeMedications</strong>
                                                <br><small class="text-muted">Active Meds</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="border rounded p-2">
                                                <strong>@upcomingAppointments</strong>
                                                <br><small class="text-muted">Upcoming Appts</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="border rounded p-2">
                                                <strong>@(patient.TreatmentUpdates?.Count ?? 0)</strong>
                                                <br><small class="text-muted">Updates</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a href="@Url.Action("PatientDetails", "Doctor", new { id = patient.PatientId })" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye"></i> View Details
                                        </a>
                                        <a href="@Url.Action("AddTreatmentUpdate", "Doctor", new { patientId = patient.PatientId })" 
                                           class="btn btn-success btn-sm">
                                            <i class="fas fa-plus"></i> Add Update
                                        </a>
                                        <a href="@Url.Action("AddMedication", "Doctor", new { patientId = patient.PatientId })" 
                                           class="btn btn-info btn-sm">
                                            <i class="fas fa-pills"></i> Add Medication
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>No Patients Assigned</h4>
                    <p>You don't have any patients assigned yet. Click "Assign New Patient" to assign patients to your care.</p>
                    <a href="@Url.Action("AssignPatient", "Doctor")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Assign New Patient
                    </a>
                </div>
            }
        </div>
    </div>
</div>