@model List<OncoTrack.Models.TreatmentUpdate>
@{
    ViewData["Title"] = "Treatment History";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Treatment History</h2>
                <a href="@Url.Action("Index", "Patient")" class="btn btn-secondary">Back to Dashboard</a>
            </div>

            @if (Model.Any())
            {
                <div class="timeline">
                    @foreach (var update in Model)
                    {
                        <div class="card mb-3">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-0">@update.UpdateType</h5>
                                    <small class="text-muted">@update.UpdateDate.ToString("MMM dd, yyyy at hh:mm tt")</small>
                                </div>
                                <span class="badge bg-primary">@update.CreatedBy</span>
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">@update.Description</h6>
                                @if (!string.IsNullOrEmpty(update.Notes))
                                {
                                    <div class="mt-3">
                                        <strong>Notes:</strong>
                                        <p class="text-muted mb-0">@update.Notes</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>No Treatment Updates Found</h4>
                    <p>Your treatment history is empty. Your doctor will add updates as your treatment progresses.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
}

.timeline .card {
    margin-left: 20px;
    position: relative;
}

.timeline .card::before {
    content: '';
    position: absolute;
    left: -15px;
    top: 20px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #007bff;
    z-index: 1;
}

.timeline .card:not(:last-child)::after {
    content: '';
    position: absolute;
    left: -11px;
    top: 30px;
    width: 2px;
    height: calc(100% + 20px);
    background-color: #dee2e6;
}
</style>