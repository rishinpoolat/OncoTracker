@model OncoTrack.ViewModels.BookAppointmentViewModel

@{
    ViewData["Title"] = "Book Appointment";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-calendar-plus mr-2"></i>
                        @if (ViewBag.IsEdit == true)
                        {
                            <text>Edit Appointment with @Model.DoctorName</text>
                        }
                        else
                        {
                            <text>Book Appointment with @Model.DoctorName</text>
                        }
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <i class="fas fa-exclamation-triangle mr-2"></i>
                            @TempData["Error"]
                        </div>
                    }

                    <form asp-action="@(ViewBag.IsEdit == true ? "UpdateAppointmentRequest" : "BookAppointment")" method="post">
                        @if (ViewBag.IsEdit == true)
                        {
                            <input type="hidden" name="originalAppointmentId" value="@ViewBag.OriginalAppointmentId" />
                        }
                        <input type="hidden" asp-for="DoctorId" />
                        <input type="hidden" asp-for="DoctorName" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AppointmentDate" class="form-label"></label>
                                    <input asp-for="AppointmentDate" 
                                           class="form-control" 
                                           type="date" 
                                           min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AppointmentTime" class="form-label"></label>
                                    <select asp-for="AppointmentTime" class="form-control">
                                        <option value="">Select Time</option>
                                        @foreach (var timeSlot in Model.AvailableTimeSlots)
                                        {
                                            <option value="@timeSlot.ToString(@"hh\:mm")">
                                                @timeSlot.ToString(@"hh\:mm") @(timeSlot.Hours >= 12 ? "PM" : "AM")
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="AppointmentType" class="form-label"></label>
                            <select asp-for="AppointmentType" class="form-control">
                                <option value="">Select Type</option>
                                @foreach (var type in Model.AppointmentTypes)
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                            <span asp-validation-for="AppointmentType" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" 
                                      class="form-control" 
                                      rows="4" 
                                      placeholder="Please describe your symptoms or reason for the appointment..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle mr-2"></i>
                            <strong>Note:</strong> Doctor consultation hours are from 10:00 AM to 6:00 PM. 
                            @if (ViewBag.IsEdit == true)
                            {
                                <text>Editing an appointment will update your existing appointment and set it as pending for doctor approval.</text>
                            }
                            else
                            {
                                <text>Your appointment request will be reviewed by your doctor and you'll be notified of the status.</text>
                            }
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-paper-plane mr-2"></i>
                                    @if (ViewBag.IsEdit == true)
                                    {
                                        <text>Update Request</text>
                                    }
                                    else
                                    {
                                        <text>Submit Request</text>
                                    }
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Appointments" class="btn btn-secondary btn-block">
                                    <i class="fas fa-arrow-left mr-2"></i>
                                    Back to Appointments
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}