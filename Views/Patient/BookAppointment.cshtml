@model OncoTrack.ViewModels.BookAppointmentViewModel

@{
    ViewData["Title"] = ViewBag.IsEdit == true ? "Edit Appointment - OncoTracker" : "Book Appointment - OncoTracker";
}

<div class="row justify-content-center" style="margin-top: 2rem;">
    <div class="col-md-8 col-lg-6">
        <div class="onco-form">
            <!-- Form Header -->
            <div class="onco-form-header text-center">
                <div class="mb-3">
                    @if (ViewBag.IsEdit == true)
                    {
                        <i class="fas fa-edit text-warning" style="font-size: 2.5rem;"></i>
                    }
                    else
                    {
                        <i class="fas fa-calendar-plus text-primary" style="font-size: 2.5rem;"></i>
                    }
                </div>
                <h2 class="onco-form-title">
                    @if (ViewBag.IsEdit == true)
                    {
                        <text>Edit Appointment</text>
                    }
                    else
                    {
                        <text>Book Appointment</text>
                    }
                </h2>
                <p class="onco-form-subtitle">
                    @if (ViewBag.IsEdit == true)
                    {
                        <text>Update your appointment with @Model.DoctorName</text>
                    }
                    else
                    {
                        <text>Schedule a consultation with @Model.DoctorName</text>
                    }
                </p>
            </div>

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="onco-validation-summary" style="display: none;"></div>

            <!-- Booking Form -->
            <form asp-action="@(ViewBag.IsEdit == true ? "UpdateAppointmentRequest" : "BookAppointment")" method="post" novalidate>
                @if (ViewBag.IsEdit == true)
                {
                    <input type="hidden" name="originalAppointmentId" value="@ViewBag.OriginalAppointmentId" />
                }
                <input type="hidden" asp-for="DoctorId" />
                <input type="hidden" asp-for="DoctorName" />

                <!-- Date and Time Section -->
                <div class="mb-4">
                    <h5 class="text-muted mb-3">
                        <i class="fas fa-calendar-alt me-2"></i>When would you like to meet?
                    </h5>
                    
                    <div class="onco-form-row">
                        <div class="onco-form-col">
                            <div class="onco-form-group">
                                <label asp-for="AppointmentDate" class="onco-label required">Appointment Date</label>
                                <div class="onco-input-group">
                                    <i class="fas fa-calendar input-icon"></i>
                                    <input asp-for="AppointmentDate" 
                                           class="onco-input" 
                                           type="date" 
                                           min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                                </div>
                                <span asp-validation-for="AppointmentDate" class="text-danger field-validation-error"></span>
                            </div>
                        </div>
                        <div class="onco-form-col">
                            <div class="onco-form-group">
                                <label asp-for="AppointmentTime" class="onco-label required">Appointment Time</label>
                                <select asp-for="AppointmentTime" class="onco-select">
                                    <option value="">Select preferred time</option>
                                    @foreach (var timeSlot in Model.AvailableTimeSlots)
                                    {
                                        <option value="@timeSlot.ToString(@"hh\:mm")">
                                            @timeSlot.ToString(@"hh\:mm") @(timeSlot.Hours >= 12 ? "PM" : "AM")
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="AppointmentTime" class="text-danger field-validation-error"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Appointment Details Section -->
                <div class="mb-4">
                    <h5 class="text-muted mb-3">
                        <i class="fas fa-stethoscope me-2"></i>Appointment Details
                    </h5>
                    
                    <div class="onco-form-group">
                        <label asp-for="AppointmentType" class="onco-label required">Type of Visit</label>
                        <select asp-for="AppointmentType" class="onco-select">
                            <option value="">Select appointment type</option>
                            @foreach (var type in Model.AppointmentTypes)
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        <span asp-validation-for="AppointmentType" class="text-danger field-validation-error"></span>
                    </div>

                    <div class="onco-form-group">
                        <label asp-for="Notes" class="onco-label">Additional Notes</label>
                        <div class="onco-input-group">
                            <i class="fas fa-notes-medical input-icon" style="align-self: flex-start; margin-top: 0.75rem;"></i>
                            <textarea asp-for="Notes" 
                                      class="onco-textarea" 
                                      rows="4" 
                                      placeholder="Please describe your symptoms, concerns, or the reason for this appointment..."
                                      style="padding-left: 2.5rem;"></textarea>
                        </div>
                        <span asp-validation-for="Notes" class="text-danger field-validation-error"></span>
                        <small class="text-muted">Optional: Help your doctor prepare for your visit</small>
                    </div>
                </div>

                <!-- Information Notice -->
                <div class="alert alert-info border-0 rounded-lg mb-4" style="background-color: rgba(13, 202, 240, 0.1); border-left: 4px solid #0dcaf0 !important;">
                    <div class="d-flex">
                        <div class="me-3">
                            <i class="fas fa-info-circle text-info" style="font-size: 1.2rem; margin-top: 0.1rem;"></i>
                        </div>
                        <div>
                            <h6 class="alert-heading text-info mb-2">Important Information</h6>
                            <ul class="mb-0 small">
                                <li><strong>Consultation Hours:</strong> 10:00 AM to 6:00 PM (Monday - Friday)</li>
                                <li>
                                    @if (ViewBag.IsEdit == true)
                                    {
                                        <strong>Update Notice:</strong> <text>Your changes will be reviewed by @Model.DoctorName for approval.</text>
                                    }
                                    else
                                    {
                                        <strong>Approval Process:</strong> <text>@Model.DoctorName will review and approve your appointment request.</text>
                                    }
                                </li>
                                <li><strong>Notification:</strong> You'll receive updates via email about your appointment status.</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="onco-form-actions onco-form-actions-between">
                    <a asp-action="Appointments" class="onco-btn onco-btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Back to Appointments
                    </a>
                    <button type="submit" class="onco-btn onco-btn-primary onco-btn-lg">
                        @if (ViewBag.IsEdit == true)
                        {
                            <i class="fas fa-save"></i>
                            <text>Update Request</text>
                        }
                        else
                        {
                            <i class="fas fa-paper-plane"></i>
                            <text>Submit Request</text>
                        }
                    </button>
                </div>
            </form>
        </div>

        <!-- Additional Help -->
        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="fas fa-phone-alt me-1"></i>
                Need help? Contact our support team or call your doctor's office directly
            </small>
        </div>
    </div>
</div>

<style>
    .input-icon {
        color: #667eea !important;
    }
    
    .alert-info {
        background-color: rgba(13, 202, 240, 0.1) !important;
        border: 1px solid rgba(13, 202, 240, 0.2) !important;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}